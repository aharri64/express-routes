<h2>Heres all my dinosaurs</h2>
<form method="GET" action="/dinosaurs">
    <label for="nameFilter">Filter by Name</label>
    <input id="nameFilter" type="text" name="nameFilter">
    <input type="submit">
</form>



<ul>
    <% for (let idx=0; idx < dinos.length; idx++) { %>
        <% let dino=dinos[idx] %>
            <p>
                <%= dino.name %>
            </p>
            <p>
                <%= dino.type %>
            </p>
            <form method="POST" action="/dinosaurs/<%= idx %>?_method=DELETE">
                <input type="submit" value='Delete'>
            </form>

            <form method="GET" action="/dinosaurs/edit/<%=idx %>?">
                <input type="submit" value="edit">
            </form>

            <!-- or do link  <a href=""></a>-->
            <a href="/dinosaurs/edit/<%=idx %>?">update</a>
            <% } %>

                <%= dinos[0].name %>
</ul>